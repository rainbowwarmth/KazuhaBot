{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "module": "ESNext",
    "target": "ESNext",
    "lib": [
      "es2016",
      "es2021",
      "es2015",
      "dom"
    ],
    "paths": {
      "*": ["./*", "./*.js"],
      "@src/*": ["src/*"],
      "@types/*": ["src/types/*"],
      "@plugin/*": ["src/plugins/*"]
    },
    "moduleResolution": "node",
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ],
  "typeRoots": [
    "node_modules/@types",
    "./src/types"
  ],
  "tsc-alias": {
    "resolveFullExtension": ".js",
    "resolveFullPaths": true
  }
}
